{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/api/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/web"
  ]
}
